<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2>Welcome Back</h2>
      <p>Sign in to your Todo Today account</p>
    </div>

    <!-- Google OAuth Button -->
    <% if devise_mapping.omniauthable? %>
      <div class="social-login">
        <% resource_class.omniauth_providers.each do |provider| %>
          <%= button_to user_google_oauth2_omniauth_authorize_path,
              method: :post,
              class: "btn btn-google",
              data: { turbo: false } do %>
            <svg class="google-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Continue with Google
          <% end %>
        <% end %>
      </div>

      <div class="divider">
        <span>or</span>
      </div>
    <% end %>

    <!-- Email/Password Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "form-control",
            placeholder: "Enter your email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password,
            autocomplete: "current-password",
            class: "form-control",
            placeholder: "Enter your password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox-group">
          <%= f.check_box :remember_me, class: "form-checkbox" %>
          <%= f.label :remember_me, "Remember me", class: "checkbox-label" %>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "Sign In", class: "btn btn-primary btn-full" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
.auth-container {
  min-height: calc(100vh - 80px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem 1rem;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.auth-card {
  background: white;
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  padding: 2.5rem;
  width: 100%;
  max-width: 400px;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-header h2 {
  color: #1e293b;
  font-size: 1.75rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #64748b;
  margin: 0;
}

.social-login {
  margin-bottom: 1.5rem;
}

.btn-google {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  width: 100%;
  padding: 0.75rem 1rem;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  background: white;
  color: #374151;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s;
  cursor: pointer;
  font-size: 0.9rem;
}

.btn-google:hover {
  border-color: #cbd5e1;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transform: translateY(-1px);
}

.google-icon {
  flex-shrink: 0;
}

.divider {
  position: relative;
  text-align: center;
  margin: 1.5rem 0;
}

.divider::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1px;
  background: #e2e8f0;
}

.divider span {
  background: white;
  color: #64748b;
  padding: 0 1rem;
  font-size: 0.875rem;
}

.auth-form .form-group {
  margin-bottom: 1.25rem;
}

.auth-form label {
  display: block;
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: #374151;
  font-size: 0.9rem;
}

.form-control {
  width: 100%;
  padding: 0.75rem;
  border: 2px solid #e5e7eb;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.2s;
}

.form-control:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.checkbox-group {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin: 1rem 0;
}

.form-checkbox {
  width: auto;
  margin: 0;
}

.checkbox-label {
  margin: 0;
  font-weight: 400;
  color: #64748b;
  cursor: pointer;
}

.btn-full {
  width: 100%;
}

.form-actions {
  margin: 1.5rem 0 1rem 0;
}

.auth-links {
  text-align: center;
  padding-top: 1rem;
  border-top: 1px solid #f1f5f9;
}

.auth-links a {
  color: #667eea;
  text-decoration: none;
  font-size: 0.9rem;
  margin: 0 0.5rem;
}

.auth-links a:hover {
  text-decoration: underline;
}

@media (max-width: 480px) {
  .auth-card {
    padding: 2rem 1.5rem;
    margin: 1rem;
    border-radius: 12px;
  }

  .auth-header h2 {
    font-size: 1.5rem;
  }
}
</style>
