# MinIO Backup Configuration
# Copy this file to backup.env and fill in your actual values

# MinIO Server Configuration
MINIO_ENDPOINT=http://your-minio-server:9000
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=todo-backups

# Backup Settings
BACKUP_RETENTION_DAYS=30
DB_PATH=/app/db/production.sqlite3

# Optional: Backup Schedule (for cron)
# Format: minute hour day month weekday
BACKUP_CRON_SCHEDULE=0 2 * * *
