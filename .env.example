# Todo Today Environment Variables
# Copy this file to .env and fill in your values

# Rails Configuration
RAILS_ENV=production
SECRET_KEY_BASE=your_secret_key_base_here

# Database (if using PostgreSQL instead of SQLite)
# DATABASE_URL=postgresql://username:password@localhost/todo_today_production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Settings
APP_HOST=bigbox
APP_PORT=3000

# Docker Settings (for docker-compose)
COMPOSE_PROJECT_NAME=todo_today
SEED_DB=true

# Optional: Email Configuration (for password resets, etc.)
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_DOMAIN=gmail.com

# Optional: Application Monitoring
# RAILS_LOG_LEVEL=info
# RAILS_SERVE_STATIC_FILES=true

# Optional: Time Zone
# TZ=America/Chicago
